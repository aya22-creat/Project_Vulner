{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=.\\SQLEXPRESS;Database=ProjectVulnDb;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=True"
  },
  "AiService": {
    "BaseUrl": "http://localhost:8000",
    "TimeoutSeconds": "60",
    "ApiKey": "optional-api-key",
    "RetryAttempts": 3
  },
  "Limits": {
    "MaxFileSizeBytes": "1048576",
    "MaxRepoSizeBytes": "104857600"
  },
  "RateLimiting": {
    "RequestsPerMinute": "100",
    "RequestsPerHour": "1000"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "http://127.0.0.1:3000",
      "http://127.0.0.1:3001"
    ]
  }
}
